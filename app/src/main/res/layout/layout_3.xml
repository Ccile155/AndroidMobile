<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Act3">


    <ImageView
        android:id="@+id/beach"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="nice beach"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Toolbar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/topbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/beach" />

    <ImageButton
        android:id="@+id/home_button"
        android:layout_width="46dp"
        android:layout_height="47dp"
        android:background="@color/transparent"
        android:contentDescription="@string/title_home"
        android:src="@drawable/ic_home_white_24dp"
        app:layout_constraintHorizontal_bias="0.219"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topbar" />

    <ImageButton
        android:id="@+id/middle"
        android:layout_width="46dp"
        android:layout_height="47dp"
        android:background="@color/transparent"
        android:contentDescription="@string/next"
        android:src="@drawable/ic_filter_vintage_black_24dp"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_button" />

    <ImageButton
        android:id="@+id/end"
        android:layout_width="46dp"
        android:layout_height="47dp"
        android:background="@color/transparent"
        android:contentDescription="@string/next"
        android:src="@drawable/ic_message_black_24dp"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/middle" />

</androidx.constraintlayout.widget.ConstraintLayout>
